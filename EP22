    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String NOM;
        int SAL;
        int HM;
        int SALT;


        NOM = (txtNOM.getText());
        SAL = Integer.parseInt(txtSAL.getText());
        HM = Integer.parseInt(txtHM.getText());


        SALT = SAL*HM;

        if (SALT > 450000){
            txtR.setText(String.valueOf("El trabajador : "+NOM+" tiene un salario de "+ SALT ));
        }
        else{
            txtR.setText(String.valueOf("El trabajador tiene como nombre : "+NOM));
        }






        // TODO add your handling code here:
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         


    
    txtNOM.setText("");
    txtSAL.setText("");
    txtHM.setText("");
    txtR.setText("");
    

    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         


    System.exit(0);


    }
